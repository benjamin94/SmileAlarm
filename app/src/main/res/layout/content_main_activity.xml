<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.benjaminlize.smilealarm.EditAlarm"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginTop="12dp"
            android:id="@+id/linearLayout4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="click to create alarm"
                android:id="@+id/alarm_time"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:layout_marginLeft="32dp"
                />

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/time_till_next_alarm_main"
        android:id="@+id/next_alarm_time"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/next_alarm_time"
            android:layout_centerHorizontal="true">

            <ToggleButton
                android:text="S"
                android:id="@+id/togglebuttonsun"
                android:textOn="S"
                android:textOff="S"
                style="@style/Buttons_day"
                />
            <ToggleButton
                android:textOn="M"
                android:textOff="M"
                android:id="@+id/togglebuttonmon"
                style="@style/Buttons_day"
                />
            <ToggleButton
                android:textOn="T"
                android:textOff="T"
                android:id="@+id/togglebuttontue"
                style="@style/Buttons_day"
                />
            <ToggleButton
                android:textOn="W"
                android:textOff="W"
                android:id="@+id/togglebuttonwed"
                style="@style/Buttons_day"
                />
            <ToggleButton
                android:textOn="T"
                android:textOff="T"
                android:id="@+id/togglebuttonthu"
                style="@style/Buttons_day"
                />
            <ToggleButton
                android:textOn="F"
                android:textOff="F"
                android:id="@+id/togglebuttonfri"
                style="@style/Buttons_day"
                />
            <ToggleButton
                android:textOn="S"
                android:textOff="S"
                android:id="@+id/togglebuttonsat"
                style="@style/Buttons_day"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="5 Seconds smile to wake up!"
            android:id="@+id/smileTime_main"
            android:gravity="center"
            android:layout_above="@+id/smile_image_main"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:id="@+id/linearLayout3"
            android:layout_below="@+id/smileTime_main"
            android:layout_centerHorizontal="true">

        </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smile_image_main"
        android:src="@drawable/smiley1"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
